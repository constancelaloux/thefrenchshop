{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block main %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-2">
                <aside class='menu text-center'>
                    <h1>filtrer</h1>
                    {{form(form)}}
                </aside>
            </div>
            <div class="col-lg-10">
                <section class="text-center">
                    <h1>Nos produits</h1>
                    <div class="container text-center">
                        <div class="row justify-content-start">
                            {% for product in products %}
                                <div class="col-md-4">
                                    <div class="product-item">
                                        <a href="{{ path('product',{'slug':product.slug}) }}"><img src="/images/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid"></a>
                                        <h4>{{ product.name }}</h4>
                                        <span class="product-subtitle">{{ product.subtitle }}</span>
                                        <span class="product-price">{{ (product.price/100)|number_format(2,',','.')}}</span>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </section>
            </div>
        </div> 
    </div>
{% endblock %}
