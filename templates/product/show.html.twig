{% extends 'base.html.twig' %}

{% block title %}{{product.name}}{% endblock %}

{% block main %}
    <div class="container text-center">
        <div class="row justify-content-start">
            <div class="col-md-5">
                <img src="/images/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
                <h3>{{product.name}}</h3>
                <p>{{ product.subtitle }}</p>
                {{ (product.price/100)|number_format(2,',','.')}}
                <hr>
                <p>
                    {{ product.description }}
                </p>
                <a href="{{ path('add_to_cart', {'id': product.id}) }}" class="btn btn-primary">Acheter</a>
            </div>
        </div>
    </div>
{% endblock %}
